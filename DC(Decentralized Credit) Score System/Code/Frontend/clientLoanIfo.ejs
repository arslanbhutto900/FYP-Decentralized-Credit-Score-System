function validateform(){  
    var cnic=document.myform.clientLoanCNIC.value;  
    var CNICformat = /^[0-9]{5}[0-9]{7}[0-9]{1}$/;

    if(cnic.match(CNICformat))
    {   
        return 1
    } 
    else{
      alert("CNIC is NOt Valid Please Enter Correct CNIC");
      return false}
    
    }  
    </script>  


